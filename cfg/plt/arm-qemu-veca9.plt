####################################################################################################
#
#  vi: set ft=make:
#
#  Platform config.
#
#  This file is including in *prj file.
#
#  Based on it will be generate files:  krn-config.h, ldr-config.h, sys-config.h.
#
####################################################################################################

#---------------------------------------------------------------------------------------------------
#  system params
#---------------------------------------------------------------------------------------------------

arch             = arm
arch_ver         = armv7-a
cpu              = cortex_a9
plat             = vexpress_a9
brd              = qemu_vexpress_a9
max_cpus         = 4
sys_clock_hz     = 1000000
ram_start        = 0x60000000
ram_sz           = 0x800000
page_sz          = 0x1000

#---------------------------------------------------------------------------------------------------
#  kernel params
#---------------------------------------------------------------------------------------------------

krn_vaddr        = 0xf0000000
krn_tick_usec    = 10000

krn_uart_paddr   = 0x10009000
krn_uart_sz      = 0x100
krn_uart_bitrate = 115200
krn_uart_irq     = 37

krn_intc_paddr   = 0x1e000000
krn_intc_sz      = 0x2000

krn_timer_paddr  = 0x10011000
krn_timer_sz     = 0x1000
krn_timer_irq    = 34

#---------------------------------------------------------------------------------------------------
#  bootloader params
#---------------------------------------------------------------------------------------------------

ldr_uart_paddr   = 0x10009000
ldr_uart_bitrate = 115200

#---------------------------------------------------------------------------------------------------
#  Base devices
#---------------------------------------------------------------------------------------------------

plt_uart         = arm_pl011
plt_intc         = arm_gic
plt_timer        = arm_sp804
plt_mmu          = arm_mmu
